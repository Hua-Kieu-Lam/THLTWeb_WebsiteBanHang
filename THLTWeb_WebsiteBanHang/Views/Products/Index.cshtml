@model IEnumerable<THLTWeb_WebsiteBanHang.Models.Product>
@* @inject  *@
@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách sản phẩm</h1>
@if(User.IsInRole("Admin")){

    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
    </p>
}
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card">
                <img src="@item.ImageUrl" alt="Product Image" height="200px"/>
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Giá: @item.Price</p>
                    <p class="card-text">Danh mục: @item.Category.Name</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Xóa</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Chi tiết</a>
                    <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-primary">Them vao gio hang</a>

                </div>
            </div>
        </div>
    }
</div>

